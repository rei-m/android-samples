<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.rei_m.androidsample" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".IndexActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activitiy.ListViewSampleActivity"
            android:label="@string/title_activity_list_view_sample" />
        <activity
            android:name=".activitiy.AsyncImageViewActivity"
            android:label="@string/title_activity_async_image_view" />
        <activity
            android:name=".activitiy.ObserverSampleActivity"
            android:label="@string/title_activity_observer_sample" />
        <activity
            android:name=".activitiy.PagerSampleActivity"
            android:label="@string/title_activity_pager_sample" />
        <activity
            android:name=".activitiy.SectionHeaderSampleActivity"
            android:label="@string/title_activity_section_header_sample" >
        </activity>
    </application>

</manifest>
